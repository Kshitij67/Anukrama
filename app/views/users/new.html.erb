<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <%= form_with(model: @user, url: users_path, method: :post, class: "mx-1 mx-md-4 space-y-4") do |form| %>
                  <% if @user.errors.any? %>
                    <div class="mx-1 mx-md-4">
                      <div class="alert alert-danger d-flex align-items-center p-3 rounded mb-4" role="alert" style="background-color: #f8d7da; color: #842029; border: 1px solid #f5c2c7;">
                        <i class="fas fa-exclamation-circle me-2" style="font-size: 1.5rem;"></i>
                        <div>
                          <ul class="mb-0">
                            <% @user.errors.full_messages.each do |message| %>
                              <li><%= message %></li>
                            <% end %>
                          </ul>
                        </div>
                      </div>
                    </div>
                  <% end %>

                  <div class="d-flex flex-row align-items-center mb-4">
                  
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <%= form.text_field :name, id: "form3Example1c", class: "form-control" %>
                      <%= form.label :name, "Your Name", class: "form-label" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <%= form.text_field :email, id: "form3Example3c", class: "form-control" %>
                      <%= form.label :email, "Your Email", class: "form-label" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <%= form.password_field :password, id: "form3Example4c", class: "form-control" %>
                      <%= form.label :password, "Password", class: "form-label" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <%= form.password_field :password_confirmation, id: "form3Example4cd", class: "form-control" %>
                      <%= form.label :password_confirmation, "Repeat your password", class: "form-label" %>
                    </div>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= form.submit "Register", class: "btn btn-primary btn-lg" %>
                  </div>

                  <div class="text-center">
                    <%= link_to "Already have an account? Log in", login_path, class: "text-sm text-indigo-600 hover:text-indigo-500" %>
                  </div>
                <% end %>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>