<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Log In</p>

                <%= form_with(url: login_path, method: :post, class: "mx-1 mx-md-4 space-y-4", model: false) do |form| %>
                  <% if flash[:alert] %>
                    <div class="mx-1 mx-md-4 alert alert-danger d-flex align-items-center p-3 rounded mb-4" role="alert" style="background-color: #f8d7da; color: #842029; border: 1px solid #f5c2c7;">
                      
                      <div>
                        <%= flash[:alert] %>
                      </div>
                    </div>
                  <% end %>

                  <div class="d-flex flex-row align-items-center mb-4">
                    
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <%= form.text_field :email, id: "form3Example3c", class: "form-control" %>
                      <%= form.label :email, "Email Address", class: "form-label" %>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    
                    <div data-mdb-input-init class="form-outline flex-fill mb-0">
                      <%= form.password_field :password, id: "form3Example4c", class: "form-control" %>
                      <%= form.label :password, "Password", class: "form-label" %>
                    </div>
                  </div>


                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= form.submit "Login", class: "btn btn-primary btn-lg" %>
                  </div>

                  <div class="text-center">
                    <p class="text-sm text-indigo-600 hover:text-indigo-500">Don't have an account? <%= link_to "Register", signup_path %></p>
                  </div>
                <% end %>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>